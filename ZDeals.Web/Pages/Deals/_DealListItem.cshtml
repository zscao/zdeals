
@model ZDeals.Web.Service.Models.Deal

<article>
    <figure class="row">
        <div class="row deal_list">
            <div class="col-lg-3 col-xl-2">
                <div class="deal_img_wrapper">
                    <img src="~/picture?pic=@Model.Picture" alt="product 1">
                </div>
            </div>
            <div class="col-lg-6 col-xl-8">
                <div class="deal_detail">
                    <div class="deal_detail_meta">
                        <span class="deal_list_date">
                            <i class="fa fa-rss"></i>
                            @Model.PublishedDateString
                        </span>
                        @if (Model.Store != null)
                        {
                            <span class="deal_store">
                                from <a href="@Model.Store.Website" target="_blank">@Model.Store.Name</a>
                            </span>
                        }
                    </div>
                    <h3>@Model.Title</h3>
                    <div class="price_box">
                        <span class="price_wrapper">
                            <span>@Model.DealPriceString</span>
                            <del>@Model.FullPriceString</del>
                        </span>
                        <span class="discount_rate">@Model.Discount</span>
                        <span class="deal_highlight">@Model.Highlight</span>
                    </div>
                </div>
                <div class="deal_desc">@Model.Description</div>
            </div>
            <div class="col-lg-3 col-xl-2 action_box">
                <div class="btn_wrapper">
                    <a class="btn btn_buynow" href="~/deals/buynow?id=@Model.Id" target="_blank">Buy it now</a>
                </div>
            </div>
        </div>
    </figure>
</article>